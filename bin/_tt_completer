#!/usr/bin/env python
import sys
import tt

TESTDIR = "/tmp/ttfunctest"
tt.TaskManager.TT_DIR = TESTDIR
manager = tt.TaskManager()

if len(sys.argv) < 2:
    print "tt_completer <actions|task_ids>"
    sys.exit(1)

action = sys.argv[1]

if action == "task_ids":
    statuses = sys.argv[2:]
    for status in statuses:
        task_ids = manager.get_task_ids_by_status(status)
        for task_id in task_ids:
            print task_id
elif action == "actions":
    actions = ('start', 'stop', 'done', 'status')
    for action in actions:
        print action


