#!/usr/bin/env python
import sys

from tt import task_manager

TESTDIR = "/tmp/ttfunctest"
task_manager.TaskManager.TT_DIR = TESTDIR
manager = task_manager.TaskManager()

if len(sys.argv) < 2:
    print "_tt_completer <actions|task_ids>"
    sys.exit(1)

action = sys.argv[1]

if action == "task_ids":
    statuses = sys.argv[2:]
    for status in statuses:
        task_ids = manager.get_task_ids_by_status(status)
        for task_id in task_ids:
            print task_id
elif action == "actions":
    actions = ('add', 'begin', 'stop', 'done', 'info')
    for action in actions:
        print action


